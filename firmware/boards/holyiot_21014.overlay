 *
 * Device tree overlay for HolyIOT-21014 (nRF52810 + LIS2DH12)
 */

&i2c0 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	
	lis2dh12: lis2dh12@19 {
		compatible = "st,lis2dh";
		reg = <0x19>;
		label = "LIS2DH12";
		irq-gpios = <&gpio0 11 GPIO_ACTIVE_HIGH>;
	};
};

&gpio0 {
	status = "okay";
};

